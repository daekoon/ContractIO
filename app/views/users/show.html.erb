<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
      <h3>Contracts (<%= @user.contracts.count %>)</h3>
      <ol class="contracts">
        <%= render @contracts %>
      </ol>
      <%= will_paginate @contracts %>
  </div>
</div>
