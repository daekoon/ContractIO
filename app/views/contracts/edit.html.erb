<% provide(:title, 'Edit Contract') %>
<h1>Edit Loan Contract</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag('/contracts/edit', :method => "post") do %>
      <%= label_tag(:name, "Contract name:") %>
      <%= text_field_tag :name, @contract.name %>

      <%= label_tag(:language, "Preferred language for agreement") %>
      <%= radio_button_tag(:language, "english") %>
      <%= label_tag(:language_english, "English") %>

      <%= label_tag(:lender_address, "Lender address") %>
      <%= text_field_tag :lender_address, @contract.lender_address %>

      <%= label_tag(:borrower_address, "Borrower address") %>
      <%= text_field_tag :borrower_address, @contract.borrower_address %>

      <%= label_tag(:borrower_name, "Borrower name:") %>
      <%= text_field_tag :borrower_name, @contract.borrower_name %>

      <%= label_tag(:lender_name, "Lender name:") %>
      <%= text_field_tag :lender_name, @contract.lender_name %>

      <%= label_tag(:loan_amount, "Loan amount:") %>
      <%= text_field_tag :loan_amount, @contract.loan_amount %>

      <%= hidden_field_tag :id, @contract.id %>

      <%= submit_tag("Edit") %>
    <% end %>
  </div>
</div>
